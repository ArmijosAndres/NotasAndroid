<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarNotaActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar nota"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/txt_titulo_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo de la nota"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/txt_contenido_edit"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:hint="Escriba aquÃ­..."
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_editar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Guardar cambios"
        android:backgroundTint="@color/azul"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Eliminar Nota"
        android:backgroundTint="@color/rojo"
        android:layout_gravity="center"/>

</LinearLayout>